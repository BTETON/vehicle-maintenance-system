<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="vms_order_line_form" model="ir.ui.view">
      <field name="name">VMS Order Line Form</field>
      <field name="model">vms.order.line</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Order lines">
          <header>
            <field name="state" statusbar_visible="pending,process,done,cancel" widget="statusbar"/>
          </header>
          <sheet>
            <group string="Order line">
              <group string="Activity">
                 <field name="task_id"/>
              </group>
              <group>
                <field name="order_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="scheduled_hours"/>
                <field name="real_hours"/>
              </group>
              <group>
                <field name="external"/>
                <field name="supplier_id" attrs="invisible[(“external”, “=”, False)]"/>
                <field name="start_date_real"/>
                <field name="end_date_real"/>
                <field name="invoice_id"/>
                <field name="paid"/>
              </group>
              <notebook>
                <page string="Mechanics">
                  <field name="responsible_ids"/>
                </page>
                <page string="Spare Parts">
                  <field name="spare_part_ids"/>
                </page>
              </notebook>
            </group>
          </sheet>
        </form>
      </field>
    </record>
    <record id="vms_open_view_order_line" model="ir.actions.act_window">
      <field name="name">Order line</field>
      <field name="res_model">vms.order.line</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
    </record>
  </data>
</openerp>